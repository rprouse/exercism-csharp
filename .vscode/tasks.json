{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group":{
        "kind": "build",
        "isDefault": true
      },
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${fileDirname}",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${fileDirname}",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}